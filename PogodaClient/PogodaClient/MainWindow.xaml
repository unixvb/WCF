<Window x:Class="PogodaClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Vertical" Grid.Column="0" Margin="5">
            <StackPanel Orientation="Horizontal">
                <Label Content="City:       "/>
                <TextBox Name="txbFilter" Width="120"/>
                <Button Name="btnFilter" Content=" Find " Margin="3,0,0,0" Click="btnFilter_Click"/>
            </StackPanel>
            <Label Name="txbPogoda"  Content="Pogoda: "/>

        </StackPanel>
    </Grid>
</Window>
